<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title><%= current_page.data.title || "Andrew Lawton" %></title>
    <meta name="author" content="Andrew Lawton">
    <meta name="Description" content="<%= current_page.data.metaDescription %>" />
    <meta name="Keywords" content="<%= current_page.data.metaKeywords %>" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato&family=Poppins:wght@300;400;800&family=Roboto&family=Work+Sans&display=swap" rel="stylesheet">
    <%= favicon_tag 'images/favicon.ico' %>
    <%= stylesheet_link_tag "site" %>
  </head>

  <body class="<%= current_page.data.bodyClass %>">
    <%= partial "partials/sprites" %>
    <%= partial "partials/navigation" %>
    <main role="main">
      <%= yield %>
    </main>
    <%= partial "partials/footer" %>
    <%= javascript_include_tag "site" %>
  </body>
</html>